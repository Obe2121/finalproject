{% extends 'base.html.j2' %}
{% block title %}
New Task Search
{% endblock %}

{% block content %}
    <h1> My Tasks </h1>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
            <th scope="row">Task Name</th>
            <th scope="row">Task Completed?</th>
            <th scope="row">Delete</th>
            </tr> 
        </thead>
        <tbody>
            {% for task in tasks %}
                <tr>
                    <th scope="row">{{task.task_name}}</th>
                    <td> <input type="checkbox" name="name1"/> </td>
                    <td><a href="/deletetask/{{task.id}}" class="btn btn-primary">Delete</a></td>
                </tr>
            {% endfor %}
{% endblock %}